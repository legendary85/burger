<h1>Eat-Da_Burger!</h1>

<h2>Burgers to Eat</h2>

<ul>
  {{!-- loops through movies table --}}
  <ul>
    {{#each burgers}}
    {{#unless devoured}}
    {{> burgers/burger-block devoured=true}}
    {{/unless}}
    {{/each}}
  </ul>



  <h2>Devoured Burgers</h2>

  <ul>
    {{#each burgers}}
    {{#if devoured}}
    {{> burgers/burger-block devoured=false}}
    {{/if}}
    {{/each}}
  </ul>

  <h2>Add a Burger</h2>
  {{!-- Form that will allow us to add data to our database --}}
  {{!-- When submit button is click a POST response is submitted the /create route --}}
  {{!-- /create is what we will be referencing with our post response --}}
  <form class="create-form">
    <div class="form-group">
      <label for="burger"> Burger Name:</label>
      <input type="text" id="burger" name="name">
    </div>

    {{!-- Remove later after testing --}}
    <div class="form-group">
      <label for="devour">Devoured?</label><br>
      <input type="radio" name="devour" value="1" checked> Devoured!<br>
      <input type="radio" name="devour" value="0"> Ready
    </div>

    <button type="submit">Add Burger</button>
  </form>



