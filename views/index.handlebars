      <textarea class="form-control" columns="8" rows="4" id="burger" name="burger_name"></textarea>
    </div>

    <!-- Empty Div to help center textarea -->
    <div class="col-md-3"></div>
  </div>

  <!-- Submit Button -->
  <center>
    <button id="submit-button" type="submit" class="addBurger btn btn-danger ">Order</button>
