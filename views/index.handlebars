<div id="bg" class="container-fluid">
  <div class="jumbotron">
    <h1>Welcome 2</h1>
    <img class="gb_logo" src="/assets/img/PinClipart.com_welcome-home-clip-art_2863801.png" alt="">
    <h1>Good Burger!!</h1>
  </div>



  <div class="row mt-4">
    <div class="col-md-6 mt-4">
      <div class="card border border-primary">
        <div class="card-header bg-primary text-white" id="toEat">
          Burgers 2 Eat!
        </div>

        <ul>
          {{!-- loops through movies table --}}
          <ul>
            {{!-- Key of object passing in data from table --}}
            {{#each burgers}}
            {{#unless devoured}}
            {{> burgers/burger-block devour=false}}
            {{/unless}}
            {{/each}}
          </ul>
      </div>
    </div>




    <div class="col-md-6 mt-4">
      <div class="card devoured-card">
        <div class="card-header text-white" id="devoured-card-header">
          Devoured burgers
        </div>
        <!--When a burger has been devoured, put burger here-->
        <div class="card-body">


          <ul>
            {{#each burgers}}
            {{#if devoured}}
            {{> burgers/burger-devoured devour=true}}
            {{/if}}

            {{/each}}
          </ul>
        </div>
      </div>
    </div>
  </div>

  <br>
  <div class="row">
    <!-- Empty Div to help center textarea -->
    <div class="col-md-3"></div>

    <!-- Burger Input Box -->
